@using FluentBootstrap
@using Ranger.Core.Models
@model Ranger.Web.Models.Configurations.ViewConfigurationsViewModel
<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>
                Save configuration
                @using (var dropdown = Html.Bootstrap().Dropdown(Model.SelectedTeam).AddStyle("display", "inline-block").Begin())
                {
                    foreach (var team in Model.Teams)
                    {
                        @dropdown.DropdownLink(team, Url.Action("Index", "Configurations", new { id = team }))
                    }
                }
            </h2>
        </div>
        @using (var form = Html.Bootstrap().Form().HideValidationSummary().SetHorizontal().Begin())
        {
            <div class="form-group">
                <label for="configBox" class="col-sm-2 control-label">Config</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(x => x.Config, new { @class = "form-control", rows = 20, cols = 5 })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        }
    </div>
</div>