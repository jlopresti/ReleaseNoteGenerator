@model Ranger.Web.Models.AddConfigViewModel
<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Add config</h2>
        </div>
        @using (Html.BeginForm("Config", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label for="configName" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "name" })
                </div>
            </div>
            <div class="form-group">
                <label for="configBox" class="col-sm-2 control-label">Config</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(x => x.Configuration, new { @class = "form-control", rows = 3 })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        }
    </div>
</div>