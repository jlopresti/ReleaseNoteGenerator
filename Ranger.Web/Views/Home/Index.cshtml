@model Ranger.Web.Models.CreateReleaseNoteViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Release Note</h2>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label for="release" class="col-sm-2 control-label">Release</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Release, new {@class = "form-control", placeholder = "release"})
                </div>
            </div>
            <div class="form-group">
                <label for="release" class="col-sm-2 control-label">Config</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Config, new SelectList(Model.Configs), new {  })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Generate</button>
                </div>
            </div>
        }
    </div>
</div>